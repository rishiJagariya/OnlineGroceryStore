<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css" type="text/css">
    <script src="https://use.fontawesome.com/80640d8907.js"></script>
    <script src="js/main.js"></script>
    <title>SignUp</title>
</head>
<body>
    <h1>.Welcome</h1>
    <div id="main" style="height: 630px;">
        <form action="/signup" method="POST">
            <div class="center">
                <h2 class="heading2">Sign Up</h2>

                <label for="name">Name</label><br>
                <i class="fa fa-user"></i>
                <input id="name" type="text" name="name" class="username" placeholder="enter Name"><br><hr>

                <label for="email" class="label2">Username</label><br>
                <i class="fa fa-envelope"></i>
                <input id="email" type="email" name="email" class="username" placeholder="enter email id"><br><hr>

                <label for="password" class="label2">Password</label><br>
                <i class="fa fa-lock"></i>
                <input type="password" name="password" id="password" placeholder="enter password"><br><hr>

                <button id="btn" type="submit">SignUp</button>
 
                <p>Or Sign Up Using</p>
                <div id="link1">
                    <div class="circle google"><i class="fa fa-google" style="padding-top: 6px;" aria-hidden="true"></i></div>
                    <div class="circle facebook"><i class="fa fa-facebook" style="padding-top: 6px;" aria-hidden="true"></i></div>
                </div>

                <p style="margin-top: 20px;">Have an account?</p>
                <div style="text-align: center; font-family: sans-serif; margin-top: 10px;">
                    <a href="/login" class="link2" style="float: none;">Login</a>
                </div>
            </div>
        </form>
    </div>
</body>